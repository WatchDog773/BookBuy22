<hr>
<h4 class=" text-center mb-5"><b>Historial de ventas</h4>
  <hr>

  
{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}



<div class="container text-center">
          {{!-- Mostrar los proyectos (si existen) --}}

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><b>No</b>.</th>
      <th scope="col"><b>Libro</b></th>
      <th scope="col"><b>Vendedor</b></th>
      <th scope="col"><b>Fecha</b></th>
      <th scope="col"><b>Precio</b></th>
    </tr>
  </thead>
  <tbody>

    {{#if ventasGlobales}}
        {{#each ventasGlobales}}


    <tr>
      <th scope="row">{{ dataValues.id}}</th>
      <td>{{ dataValues.nombreLibro}}</td>
      <td>{{ dataValues.emailVendedor}}</td>
      <td>{{ dataValues.fecha}}</td>
      <td>{{ dataValues.precio}}</td>
    </tr>


        {{/each}}
    {{else}}
{{/if}}

  </tbody>
</table>



</div>
