<hr />
<h4 class="text-center mb-3">
  <b>
    <i class="fas fa-table mr-2"></i>
    Historial de ventas
  </b>
</h4>
<hr />

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center">
  {{! Mostrar los proyectos (si existen) }}
<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          <b>
            No
          </b>
          .
        </th>
        <th scope="col">
          <b>
            Título del Libro
          </b>
        </th>
        <th scope="col">
          <b>
            Vendedor
          </b>
        </th>
        <th scope="col">
          <b>
            Fecha de Venta
          </b>
        </th>
        <th scope="col">
          <b>
            Precio
          </b>
        </th>
            <th scope="col">
          <b>
            Beneficio
          </b>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if ventasGlobales}}
        {{#each ventasGlobales}}
          <tr>
            <th scope="row">
              <a >{{dataValues.id}}</a>
            </th>
            <td>
              <a>{{dataValues.nombreLibro}}</a>
            </td>
            <td>
              <a>{{dataValues.emailVendedor}}</a>
            </td>
            <td>
              <a>{{dataValues.fecha}}</a>
            </td>
            <td>
             <a> L.{{dataValues.precio}}</a>
            </td>
            <td>
              <a>L.{{dataValues.beneficioBookBuy}}</a>
            </td>
          </tr>
        {{/each}}
      {{else}}
 <div class="alert alert-info mt-4" role="alert">
          Aún no hay ventas registradas
        </div>
      {{/if}}
    </tbody>
  </table>
</div>

</div>
