<hr>
<h5 class="text-center mt-4 mb-4"><i class="fas fa-book  ml-2  mr-2"></i>Mi Estantería</h5>
<hr>

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center mt-4">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          <b>
            Título del libro
          </b>
        </th>
        <th scope="col">
          <b>
            Acción
          </b>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if libros}}
        {{#each libros}}
          <tr>
            <td>
              {{dataValues.nombre}}
            </td>
            <td>
              <a
                type="button"
                href="/libro/{{dataValues.url}}"
                class="btn btn-primary  ml-2 mt-1"
              >
                Editar
              </a>
              <button
                name="quitar-libro"
                data-libro-url={{dataValues.url}}
                type="button"
                class="btn btn-danger ml-2 mt-1"
              >
                Quitar
              </button>
            </td>
          </tr>
        {{/each}}
      {{else}}
   <div class="alert alert-info mt-4" role="alert">
            {{usuario.username}} aún no has estas vendiendo ningún libro ¿Qué esperas?
        </div>
      {{/if}}
    </tbody>
  </table>
</div>

<hr />
<div class="row">
  <div class="col text-center mb-3 mt-6">
    <a href="/crear_libro" class="btn btn-success btn-lg text-center mt-3">
      Añadir un nuevo libro a mi estantería
    </a>
  </div>
</div>


<div style="height: 300px;">
</div>

