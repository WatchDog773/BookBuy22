
<hr>
<h5 class="text-center mt-4 mb-4"><i class="fas fa-shopping-basket ml-2  mr-2"></i>Mis Compras</h5>
<hr>

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center mt-3 mb-7">
  <div class="table-responsive">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          <b>
            <a>Título del libro</a>
          </b>
        </th>
        <th scope="col">
          <b>
            <a>Fecha de Compra</a>
          </b>
        </th>
        <th scope="col">
          <b>
            <a>Precio</a>
          </b>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if compras}}
        {{#each compras}}
          <tr>
            <td>
              <a>{{dataValues.nombreLibro}}</a>
            </td>
            <td>
             <a> {{dataValues.fecha}}</a>
            </td>
            <td>
              <a>L.{{dataValues.precio}}</a>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <div class="alert alert-info mt-4" role="alert">
         <a>{{usuario.username}} aún no has comprado ningún libro ¿Qué esperas?</a>
        </div>
      {{/if}}
    </tbody>
  </table>
  </div>

</div>
<hr>

<div style="height: 100px;">
</div>