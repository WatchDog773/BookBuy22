<hr />
<h4 class="text-center mb-3">
  <b>
    <i class="fas fa-shipping-fast mr-2"></i>
    Envios pendientes
  </b>
</h4>
<hr />

{{! Mostrar los mensajes en caso de existir }}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container text-center">
  {{! Mostrar los proyectos (si existen) }}
<div class="table-responsive">
 <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">
          <b>
            Comprador
          </b>
        </th>
        <th scope="col">
          <b>
            Nombre del libro
          </b>
        </th>
        <th scope="col">
          <b>
            Dirección de Entrega
          </b>
        </th>
        <th scope="col">
          <b>
            teléfono
          </b>
        </th>
        <th scope="col">
          <b>
            Precio
          </b>
        </th>
        <th scope="col">
          <b>
            Acción
          </b>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#if envios}}
        {{#each envios}}
          <tr>
            <th scope="row">
              <a >{{dataValues.emailComprador}}</a>
            </th>
            <td>
             <a> {{dataValues.nombreLibro}}</a>
            </td>
            <td>
            <a>  {{dataValues.direccionComprador}}</a>
            </td>
            <td>
              <a>{{dataValues.telefono}}</a>
            </td>
            <td>
             <a> L.{{dataValues.precioCompra}}</a>
            </td>
            <td>
              <!-- Button trigger modal -->
              <form method="POST" action="/eliminar_envio">
                <input
                  type="text"
                  class="form-control"
                  value="{{dataValues.id}}"
                  id="idEnvio"
                  name="idEnvio"
                  hidden
                />
                <button type="submit" class="btn btn-danger mr-3">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <div class="alert alert-info mt-4" role="alert">
          Aún no hay envios pendientes
        </div>
      {{/if}}
    </tbody>
  </table>
</div>
 
</div>
<hr />

<div style="height: 210px;">
</div>