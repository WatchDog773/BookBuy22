<hr>
<h4 class=" text-center"><b>¿Qué esperas? ¡Consigue el tuyo ahora mismo! </b> </h4>
  <hr>
  
{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}


<div class="container">
    <div class="card-deck  col-md-12 mb-9  text-center">
    {{#if libros}}
        {{#each libros}}
          
      <div class="row mr-auto">
        <div class="col-md-12 mb-5">
          <div class="card " id="cardHome"  id="containerHomeLibros" >
            <img  id="cardImagen" class="card-img-top" src="./images/libros2.png">  
              <div class="card-body text-left" >
                   <div class="card-block">
                    <figure class="profile">
                        <img src="../images/book.png" class="profile-avatar" alt="">
                    </figure>
                    <h4 class="card-title mt-3 text-center">{{ dataValues.nombre  }}</h4>
                      <div class="card-text text-center"><b>Autor: </b>
                       {{ dataValues.autor  }} 
                    </div>
                      <div class="card-text text-center"><b>ISBN: </b>
                       {{ dataValues.ISBN  }} 
                    </div>
                     <div class="card-text text-center"><b>Vendedor: </b>
                       {{ dataValues.vendedor  }} 
                    </div>
                    <div class="card-text  text-center "><b>Descripción: </b> <hr>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" disabled > {{ dataValues.descripcion  }}</textarea> <hr>
                    </div>
                  
                  <div class="card-text text-center mt-4"><h4> <Strong>Precio L.{{ dataValues.precio  }}</Strong>  </h4> <hr>
                    </div>
                </div>
                <div class="card-footer">
                     {{!-- <button name="eliminar-libro" data-libro-url={{dataValues.url}} type="button" class="btn btn-primary btn-lg btn-block mt-2">Comprar</button> --}}
                       <form action="/checkout" method="POST">
                            <input type="text" value={{ dataValues.precio}} name="precio" hidden>
                            <input type="text" value="{{dataValues.nombre}}" name="nombreLibro" hidden>
                            <input type="text" value={{ dataValues.emailVendedor}} name="emailVendedor" hidden>
                            <input type="text" value={{dataValues.id}} name="idLibro" hidden>
                            <input type="text" value={{ dataValues.usuarioId}} name="idVendedor" hidden>
                            <input type="text" value={{ dataValues.beneficioBookBuy}} name="beneficioBookBuy" hidden>
                            <input type="text" value={{ dataValues.beneficioUsuario}} name="beneficioUsuario" hidden>
                            
                                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                   data-key="pk_test_51H5se7H7MJGBcY4YCYjUeBwgg0jBunZDEGDZZ7kPIqs3rhk8FvnWPQ3gHMhQ7VOx7KaeYBZlhEnjNq0clLnPi24C00rEkpgYmn"
                                  {{!-- data-amount= {{ dataValues.precio }}  --}}
                                  data-name="Book Buy"
                                  data-image="./images/book.png"
                                  data-description="Compra Segura"
                                  data-locale="auto"></script>
                               </script>
                          </form>
                      <small> Publicado {{ dataValues.fecha  }}</small>
                </div>
              </div>
          </div>
        </div>
      </div>
        {{/each}}
    {{else}}
       <div class="container">
           <li class="list-group-item list-group-item-primary"><h5>Aún no hay libros disponibles para realizar compras</h5> </li>
    </div>
         {{/if}}
    </div>
</div>


<hr>
