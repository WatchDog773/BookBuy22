{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
   <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}




<div class="container text-center mt-3">

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col"><b>Titulo</b></th>
      <th scope="col"><b>Precio</b></th>
    </tr>
  </thead>
  <tbody>

    {{#if ventas}}
        {{#each ventas}}
    <tr>
      <td>{{ dataValues.nombreLibro}}</td>
      <td>L.{{ dataValues.precio}}</td>
    </tr>

        {{/each}}
    {{else}}
{{/if}}

  </tbody>
</table>


</div>


